{
  "name": "robochef",
  "version": "0.0.1",
  "type": "commonjs",
  "description": "This repository contains tools and scripts needed by IT organizations that are using different fleet management tools.",
  "author": {
    "name": "Robocorp",
    "email": "dev@robocorp.com",
    "url": "https://robocorp.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "main": "index.js",
  "bin": "./lib/it-setup/src/cli.js",
  "pkg": {
    "scripts": "./lib/**/*.js",
    "outputPath": "release",
    "assets": [
      "./lib/it-setup/python/**/*",
      "./lib/it-setup/powershell/**/*",
      "./lib/it-setup/bash/**/*",
      "./lib/it-setup/recipes/**/*",
      "./node_modules/figlet/fonts/3D-ASCII.flf"
    ]
  },
  "scripts": {
    "setup": "yarn install --force",
    "clean": "yarn rimraf lib dist release",
    "build": "npm-run-all clean build:assets build:app",
    "build:app": "npx tsc && npx tsc-alias",
    "build:assets": "node ./buildResources.js",
    "test": "npm-run-all test:types test:lint test:prettier",
    "test:lint": "eslint --ext .tsx,.ts --max-warnings 0 .",
    "test:types": "tsc --noEmit",
    "test:prettier": "prettier --check src/",
    "fix": "npm-run-all fix:prettier fix:lint",
    "fix:prettier": "prettier --write src/ ",
    "fix:lint": "eslint --fix --ext .tsx,.ts .",
    "dev": "cross-env NODE_ENV=development npm-run-all dev:req dev:run",
    "dev:req": "npm-run-all build:assets",
    "dev:run": "npx ts-node src/cli.ts",
    "exe": "yarn clean && yarn build && yarn pkg . --debug",
    "watch": "tsc --watch"
  },
  "engines": {
    "node": ">=18.17"
  },
  "engineStrict": true,
  "dependencies": {
    "@robocorp/dev-tools-commons": "6.1.2",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "chalk": "4.1.2",
    "easy-table": "^1.2.0",
    "eslint": "^8.53.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "figlet": "^1.7.0",
    "log4js": "^6.9.1",
    "nanospinner": "^1.1.0",
    "prompt-sort": "^1.1.0",
    "prompts": "^2.4.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.7",
    "@types/fs-extra": "^11.0.3",
    "@types/prompts": "^2.4.7",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2"
  }
}
